.navbar.navbar-static-top
  .navbar-inner
    =link_to "Logo", user_home_path, class: "brand"

    %ul.nav
      - if user_signed_in?
        %li{ class: "#{@home_active ? 'active' : ''}" }
          =link_to "Home", user_home_path
      %li
        =link_to "Schedule Emails", "#"
      %li
        =link_to "Link", "#"

    %ul.nav.pull-right
      - if user_signed_in?
        %li= link_to('Sign out', signout_path)
      - else
        %li.dropdown
          = link_to '#', class: "dropdown-toggle", :"data-toggle" => "dropdown" do
            Join/Enter
            %b.caret

          %ul.dropdown-menu
            %li= link_to('Sign in', signin_path)
            %li= link_to('Sign Up', signup_path)
