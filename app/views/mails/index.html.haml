- content_for :additional_styles do
  - stylesheets = %w(mail)
  - stylesheets.each do |ss|
    = stylesheet_link_tag(ss, media: "all")

.container
  %br/
  = button_to('New Mail', new_mail_path, { form_class: 'form-inline', class: 'btn btn-primary', method: :get })

- if @existing_mails.present?
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th Subject
        %th Scheduled At
        %th Recurring
        %th Actions

    %tbody
      - @existing_mails.each do |mail|
        - mail_schedule = mail.mail_schedule
        %tr
          %td<
            = link_to(mail.subject, mail_path(mail))
          - if mail_schedule.present?
            %td= mail_schedule.formatted_datetime
            %td= mail_schedule.formatted_recurring_message
          - else
            %td= 'Not scheduled yet!'
            %td= 'NA'
          %td
            %span<
              = link_to(edit_mail_path(mail)) do
                %i.icon-edit
            %span(style='padding-left: 5px; padding-right: 5px;')<
              |
            %span<
              = link_to(mail_path(mail), method: :delete, confirm: 'Are your sure?') do
                %i.icon-remove

